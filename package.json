{
  "name": "apiwithclient",
  "version": "1.0.0",
  "engines": {
    "node": "18.20.4"
  },
  "scripts": {
    "install-vite": "vite",
    "install-api": "nodemon server.js",
    "build-vite": "npm run build",
    "heroku-postbuild": "npm run build",
    "start": "node server.js",
    "dev": "concurrently --raw \"npm run api\" \"npm run vite\"",
    "vite": "cd vite && npm run dev",
    "api": "cd api && npm run dev"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "express": "^4.17.1"  // Ensure you have this if using Express
  }
}
